[#ftl]
<!DOCTYPE html>
<html lang="cz">
[#include "../_common/header.ftlh"]
<body>
<h1>Ninja Akademie pro děti</h1>
<h3>Obsazenost kurzu ${termin.nameCourse.title}:</h3>
<table class="table table-sm">
    <thead>
    <tr>
        <th></th>
        <th>Jméno</th>
        <th>Příjmení</th>
        <th>Odhlásit</th>
    </tr>
    </thead>
    <tbody>

    [#list kadeti as kadet]
        <tr>
            <td>${kadet?counter}</td>
            <td>${kadet.firstName}</td>
            <td>${kadet.secondName}</td>
            <td>
                <form method="post" action="/cadet/${kadet.id}">
                    <button type="submit" class="btn btn-success"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
